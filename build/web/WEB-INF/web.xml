        <servlet-name>ChangePassword</servlet-name>
        <url-pattern>/ChangePassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>hotel_signup</servlet-name>
        <url-pattern>/hotel_signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>hotel_login</servlet-name>
        <url-pattern>/hotel_login</url-pattern>
