        <servlet-name>viewBillSummary</servlet-name>
        <url-pattern>/viewBillSummary</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmPayment</servlet-name>
        <url-pattern>/ConfirmPayment</url-pattern>
    </servlet-mapping>
