    <servlet>
        <servlet-name>forgot2</servlet-name>
        <servlet-class>forgot2</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePassword</servlet-name>
        <servlet-class>ChangePassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>hotel_signup</servlet-name>
        <servlet-class>hotel_signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>hotel_login</servlet-name>
        <servlet-class>hotel_login</servlet-class>
