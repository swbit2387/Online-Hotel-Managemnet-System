    <servlet>
        <servlet-name>AcceptDeny</servlet-name>
        <servlet-class>AcceptDeny</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookHotel</servlet-name>
        <servlet-class>BookHotel</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewBillSummary</servlet-name>
        <servlet-class>viewBillSummary</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmPayment</servlet-name>
        <servlet-class>ConfirmPayment</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login_serv</servlet-name>
        <url-pattern>/login_serv</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signup_serv</servlet-name>
        <url-pattern>/signup_serv</url-pattern>
